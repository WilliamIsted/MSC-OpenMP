{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../Source",
          "files": [
            "**/*.csproj",
            "**/Resources/*.dll"
          ]
        }
      ],
      "dest": "api",
      "include": [
        "../Source/bin/Release/net35/OpenMP.xml"
      ]
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "docs/images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appTitle": "OpenMP Mod",
      "_appName": "MSC :: OpenMP Mod",
      "_appLogoPath": "docs/images/logo.png",
      "_appFaviconPath": "docs/images/favicon.png",
      "_enableSearch": true,
      "pdf": false
    }
  }
}